@model IEnumerable<Microsoft.Graph.Models.User>

@{
    ViewData["Title"] = "Microsoft Entra ID Users";
}

<div class="container">    <div class="row">
        <div class="col-md-12">
            <h2>@ViewData["Title"]</h2>
            
            <!-- Token Type Information and Switching -->
            <div class="row mb-3">
                <div class="col-md-8">
                    @if (!string.IsNullOrEmpty(ViewBag.TokenType))
                    {
                        <div class="alert alert-info">
                            <h6><i class="fas fa-info-circle"></i> Authentication Method</h6>
                            <p><strong>Current:</strong> <span class="badge bg-primary">@ViewBag.TokenType</span></p>
                            @if (!string.IsNullOrEmpty(ViewBag.InfoMessage))
                            {
                                <p class="mb-0">@ViewBag.InfoMessage</p>
                            }
                        </div>
                    }
                </div>
                <div class="col-md-4 text-end">
                    <div class="btn-group" role="group">
                        <a asp-action="Index" asp-route-useUserToken="false" 
                           class="btn @(ViewBag.UseUserToken != true ? "btn-primary" : "btn-outline-primary")">
                            <i class="fas fa-building"></i> App Token
                        </a>
                        <a asp-action="Index" asp-route-useUserToken="true" 
                           class="btn @(ViewBag.UseUserToken == true ? "btn-success" : "btn-outline-success")">
                            <i class="fas fa-user"></i> User Token
                        </a>
                    </div>
                </div>
            </div>
              @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="alert @(ViewBag.ShowTokenLimitation == true ? "alert-warning" : "alert-danger")" role="alert">
                    <h6><i class="fas @(ViewBag.ShowTokenLimitation == true ? "fa-info-circle" : "fa-exclamation-triangle")"></i> @ViewBag.Error</h6>
                    
                    @if (!string.IsNullOrEmpty(ViewBag.TokenInfo))
                    {
                        <p>@ViewBag.TokenInfo</p>
                    }
                    
                    @if (ViewBag.ShowTokenLimitation == true)
                    {
                        <hr>
                        <h6>ðŸ’¡ Understanding the Limitation:</h6>
                        <p>This application uses <strong>IdentityServer</strong> for authentication and <strong>Microsoft Graph</strong> for data access. These systems use different token formats:</p>
                        <ul>
                            <li><strong>IdentityServer tokens</strong>: Used for local application authentication</li>
                            <li><strong>Azure AD tokens</strong>: Required for Microsoft Graph API access</li>
                        </ul>
                        <p><strong>Current solution:</strong> The app uses application permissions to access Graph API data on behalf of all users.</p>
                        <p><strong>Alternative approaches:</strong> Replace IdentityServer with direct Azure AD authentication for full delegated permissions support.</p>
                    }
                    else if (ViewBag.PermissionHelp == true)
                    {
                        <hr>
                        <h6>ðŸ”§ How to fix this:</h6>
                        <ol>
                            <li>Go to <a href="https://portal.azure.com" target="_blank">Azure Portal</a></li>
                            <li>Navigate to: <strong>Azure Active Directory</strong> â†’ <strong>App registrations</strong></li>
                            <li>Find your app in the list</li>
                            <li>Go to <strong>API permissions</strong></li>
                            <li>Add these permissions:
                                <ul>
                                    <li><code>User.Read.All</code> (Application)</li>
                                    <li><code>Directory.Read.All</code> (Application)</li>
                                </ul>
                            </li>
                            <li>Click <strong>"Grant admin consent"</strong></li>
                        </ol>
                    }
                </div>
            }

            <!-- Search Form -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <form asp-action="Search" method="post" class="d-flex">
                        <input type="text" name="searchQuery" class="form-control me-2" 
                               placeholder="Search users by name or email..." 
                               value="@ViewBag.SearchQuery">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </form>
                </div>
                <div class="col-md-6 text-end">
                    <a asp-action="Index" class="btn btn-secondary">Show All Users</a>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(ViewBag.SearchQuery))
            {
                <div class="alert alert-info">
                    Search results for: <strong>@ViewBag.SearchQuery</strong>
                </div>
            }

            @if (Model != null && Model.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Users (@Model.Count())</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Display Name</th>
                                        <th>Email</th>
                                        <th>User Principal Name</th>
                                        <th>Job Title</th>
                                        <th>Department</th>
                                        <th>Office Location</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@user.DisplayName</strong>
                                            </td>
                                            <td>@user.Mail</td>
                                            <td>@user.UserPrincipalName</td>
                                            <td>@user.JobTitle</td>
                                            <td>@user.Department</td>
                                            <td>@user.OfficeLocation</td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@user.Id" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    View Details
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <h5>No users found</h5>
                    <p>Either no users match your search criteria or there was an issue loading users from Microsoft Graph.</p>
                </div>
            }
        </div>
    </div>
</div>
